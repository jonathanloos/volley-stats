<div class="card" data-controller="players--card">
  <div class="card-body">
    <div class="d-flex flex-row align-items-center mb-2">
      <h4 class="flex-grow-1 m-0">
        <%= @player.persisted? ? @player : "#{@volleyball_set.game.away_team} Player" %> <span class="text-muted"><%= @player.jersey_number if @player.persisted? %></span>
      </h4>
      <%= render(Players::SubstitutionComponent.new(player: @player)) if @player.persisted? %>
    </div>
    <hr/>
    <%= turbo_frame_tag dom_id(Event.new) do %>
      <%= bootstrap_form_with model: [@volleyball_set, Event.new], data: {"players--card-target": "form"} do |form| %>
        <%= form.hidden_field :player_id, value: @player.id %>
        <%= form.hidden_field :category, value: nil, data: {"players--card-target": "categorySubmission"} %>
        <%= form.hidden_field :rally_skill, value: nil, data: {"players--card-target": "rallySkillSubmission"} %>
        <%= form.hidden_field :skill_point, value: nil, data: {"players--card-target": "skillPointSubmission"} %>
        <%= form.hidden_field :skill_error, value: nil, data: {"players--card-target": "skillErrorSubmission"} %>
        <%= form.hidden_field :quality, value: nil, data: {"players--card-target": "qualitySubmission"} %>
      <% end %>
    <% end %>
    <div class="d-flex flex-row align-items-center justify-content-between my-2 flex-wrap">
      <p class="m-0">Attack:</p>
      <div class="d-flex flex-row gap-2 flex-nowrap">
        <input type="radio" class="btn-check" name="attack-options-outlined-<%= @player.id %>" id="attack-secondary-outlined-<%= @player.id %>" autocomplete="off" data-players--card-target="statButton" data-category="continuation">
        <label class="btn btn-outline-secondary btn-sm" for="attack-secondary-outlined-<%= @player.id %>">C</label>
        <input type="radio" class="btn-check" name="attack-options-outlined-<%= @player.id %>" id="attack-success-outlined-<%= @player.id %>" autocomplete="off" data-players--card-target="statButton" data-category="point_earned">
        <label class="btn btn-outline-success btn-sm" for="attack-success-outlined-<%= @player.id %>">K</label>
        <input type="radio" class="btn-check" name="attack-options-outlined-<%= @player.id %>" id="attack-danger-outlined-<%= @player.id %>" autocomplete="off" data-players--card-target="statButton" data-category="point_given">
        <label class="btn btn-outline-danger btn-sm" for="attack-danger-outlined-<%= @player.id %>">E</label>
      </div>
    </div>

    <div class="d-flex flex-row align-items-center justify-content-between my-2 flex-wrap">
      <p class="m-0">Serve:</p>
      <div class="d-flex flex-row gap-2 flex-nowrap">
        <input type="radio" class="btn-check" name="serve-options-outlined-<%= @player.id %>" id="serve-secondary-outlined-<%= @player.id %>" autocomplete="off" data-players--card-target="statButton"  data-category="continuation">
        <label class="btn btn-outline-secondary btn-sm" for="serve-secondary-outlined-<%= @player.id %>">C</label>
        <input type="radio" class="btn-check" name="serve-options-outlined-<%= @player.id %>" id="serve-success-outlined-<%= @player.id %>" autocomplete="off" data-players--card-target="statButton" data-category="point_earned">
        <label class="btn btn-outline-success btn-sm" for="serve-success-outlined-<%= @player.id %>">A</label>
        <input type="radio" class="btn-check" name="serve-options-outlined-<%= @player.id %>" id="serve-danger-outlined-<%= @player.id %>" autocomplete="off" data-players--card-target="statButton" data-category="point_given">
        <label class="btn btn-outline-danger btn-sm" for="serve-danger-outlined-<%= @player.id %>">E</label>
      </div>
    </div>

    <div class="d-flex flex-row align-items-center justify-content-between my-2 flex-wrap">
      <p class="m-0">Reception:</p>
      <div class="d-flex flex-row gap-2 flex-nowrap">
        <input type="radio" class="btn-check" name="serve-receive-options-outlined-<%= @player.id %>" id="serve-receive-secondary-outlined-<%= @player.id %>-1" autocomplete="off" data-players--card-target="statButton" data-category="continuation">
        <label class="btn btn-outline-secondary btn-sm" for="serve-receive-secondary-outlined-<%= @player.id %>-1">1</label>
        <input type="radio" class="btn-check" name="serve-receive-options-outlined-<%= @player.id %>" id="serve-receive-secondary-outlined-<%= @player.id %>-2" autocomplete="off" data-players--card-target="statButton" data-category="continuation">
        <label class="btn btn-outline-secondary btn-sm" for="serve-receive-secondary-outlined-<%= @player.id %>-2">2</label>
        <input type="radio" class="btn-check" name="serve-receive-options-outlined-<%= @player.id %>" id="serve-receive-secondary-outlined-<%= @player.id %>-3" autocomplete="off" data-players--card-target="statButton" data-category="continuation">
        <label class="btn btn-outline-secondary btn-sm" for="serve-receive-secondary-outlined-<%= @player.id %>-3">3</label>
        <input type="radio" class="btn-check" name="serve-receive-options-outlined-<%= @player.id %>" id="serve-receive-secondary-outlined-<%= @player.id %>-4" autocomplete="off" data-players--card-target="statButton" data-category="continuation">
        <label class="btn btn-outline-secondary btn-sm" for="serve-receive-secondary-outlined-<%= @player.id %>-4">4</label>
        <input type="radio" class="btn-check" name="serve-receive-options-outlined-<%= @player.id %>" id="serve-receive-danger-outlined-<%= @player.id %>" autocomplete="off" data-players--card-target="statButton" data-category="point_given">
        <label class="btn btn-outline-danger btn-sm" for="serve-receive-danger-outlined-<%= @player.id %>">E</label>
      </div>
    </div>

    <div class="d-flex flex-row align-items-center justify-content-between my-2 flex-wrap">
      <p class="m-0">Block:</p>
      <div class="d-flex flex-row gap-2 flex-nowrap">
        <input type="radio" class="btn-check" name="block-options-outlined-<%= @player.id %>" id="block-secondary-outlined-<%= @player.id %>" autocomplete="off" data-players--card-target="statButton" data-category="continuation">
        <label class="btn btn-outline-secondary btn-sm" for="block-secondary-outlined-<%= @player.id %>">C</label>
        <input type="radio" class="btn-check" name="block-options-outlined-<%= @player.id %>" id="block-success-outlined-<%= @player.id %>" autocomplete="off" data-players--card-target="statButton" data-category="point_earned">
        <label class="btn btn-outline-success btn-sm" for="block-success-outlined-<%= @player.id %>">K</label>
        <input type="radio" class="btn-check" name="block-options-outlined-<%= @player.id %>" id="block-danger-outlined-<%= @player.id %>" autocomplete="off" data-players--card-target="statButton" data-category="point_given">
        <label class="btn btn-outline-danger btn-sm" for="block-danger-outlined-<%= @player.id %>">E</label>
      </div>
    </div>

    <div class="d-flex flex-row align-items-center justify-content-between my-2 flex-wrap">
      <p class="m-0">Dig:</p>
      <div class="d-flex flex-row gap-2 flex-nowrap">
        <input type="radio" class="btn-check" name="dig-options-outlined-<%= @player.id %>" id="dig-success-outlined-<%= @player.id %>" autocomplete="off" data-players--card-target="statButton" data-category="continuation">
        <label class="btn btn-outline-success btn-sm" for="dig-success-outlined-<%= @player.id %>">+</label>
        <input type="radio" class="btn-check" name="dig-options-outlined-<%= @player.id %>" id="dig-danger-outlined-<%= @player.id %>" autocomplete="off" data-players--card-target="statButton" data-category="point_given">
        <label class="btn btn-outline-danger btn-sm" for="dig-danger-outlined-<%= @player.id %>">E</label>
      </div>
    </div>

    <div class="d-flex flex-row align-items-center justify-content-between my-2 flex-wrap">
      <p class="m-0">Other:</p>
      <div>
        <div>
          <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#otherActionModal<%= @player.id %>">
            Select
          </button>

          <div class="modal fade" id="otherActionModal<%= @player.id %>" tabindex="-1" aria-labelledby="otherActionModal<%= @player.id %>Label" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="otherActionModal<%= @player.id %>Label">Other Action: <%= @player.persisted? ? @player : "#{@volleyball_set.game.away_team} Player" %></h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <div class="d-flex flex-row align-items-center justify-content-between my-2 flex-wrap">
                    <p class="m-0">Free Ball Receive:</p>
                    <div class="d-flex flex-row gap-2 flex-nowrap">
                      <input type="radio" class="btn-check" name="free-ball-receive-options-outlined-<%= @player.id %>" id="free-ball-receive-secondary-outlined-<%= @player.id %>-1" autocomplete="off" data-players--card-target="statButton" data-category="continuation">
                      <label class="btn btn-outline-secondary btn-sm" for="free-ball-receive-secondary-outlined-<%= @player.id %>-1">1</label>
                      <input type="radio" class="btn-check" name="free-ball-receive-options-outlined-<%= @player.id %>" id="free-ball-receive-secondary-outlined-<%= @player.id %>-2" autocomplete="off" data-players--card-target="statButton" data-category="continuation">
                      <label class="btn btn-outline-secondary btn-sm" for="free-ball-receive-secondary-outlined-<%= @player.id %>-2">2</label>
                      <input type="radio" class="btn-check" name="free-ball-receive-options-outlined-<%= @player.id %>" id="free-ball-receive-secondary-outlined-<%= @player.id %>-3" autocomplete="off" data-players--card-target="statButton" data-category="continuation">
                      <label class="btn btn-outline-secondary btn-sm" for="free-ball-receive-secondary-outlined-<%= @player.id %>-3">3</label>
                      <input type="radio" class="btn-check" name="free-ball-receive-options-outlined-<%= @player.id %>" id="free-ball-receive-secondary-outlined-<%= @player.id %>-4" autocomplete="off" data-players--card-target="statButton" data-category="continuation">
                      <label class="btn btn-outline-secondary btn-sm" for="free-ball-receive-secondary-outlined-<%= @player.id %>-4">4</label>
                      <input type="radio" class="btn-check" name="free-ball-receive-options-outlined-<%= @player.id %>" id="free-ball-receive-danger-outlined-<%= @player.id %>" autocomplete="off" data-players--card-target="statButton" data-category="point_given">
                      <label class="btn btn-outline-danger btn-sm" for="free-ball-receive-danger-outlined-<%= @player.id %>">E</label>
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center justify-content-between my-2 flex-wrap">
                    <p class="m-0">Net:</p>
                    <div class="d-flex flex-row gap-2 flex-nowrap">
                      <input type="radio" class="btn-check" name="net-touch-outlined-<%= @player.id %>" id="net-touch-danger-outlined-<%= @player.id %>" autocomplete="off" data-players--card-target="statButton" data-category="point_given">
                      <label class="btn btn-outline-danger btn-sm" for="net-touch-danger-outlined-<%= @player.id %>">Touch</label>
                      <input type="radio" class="btn-check" name="under-outlined-<%= @player.id %>" id="under-danger-outlined-<%= @player.id %>" autocomplete="off" data-players--card-target="statButton" data-category="point_given">
                      <label class="btn btn-outline-danger btn-sm" for="under-danger-outlined-<%= @player.id %>">Under</label>
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center justify-content-between my-2 flex-wrap">
                    <p class="m-0">Other:</p>
                    <div class="d-flex flex-row gap-2 flex-nowrap">
                      <input type="radio" class="btn-check" name="lift-outlined-<%= @player.id %>" id="lift-danger-outlined-<%= @player.id %>" autocomplete="off" data-players--card-target="statButton" data-category="point_given">
                      <label class="btn btn-outline-danger btn-sm" for="lift-danger-outlined-<%= @player.id %>">Lift</label>
                      <input type="radio" class="btn-check" name="second-contact-outlined-<%= @player.id %>" id="second-contact-danger-outlined-<%= @player.id %>" autocomplete="off" data-players--card-target="statButton" data-category="point_given">
                      <label class="btn btn-outline-danger btn-sm" for="second-contact-danger-outlined-<%= @player.id %>">2nd Contact</label>
                      <input type="radio" class="btn-check" name="out-of-rotation-outlined-<%= @player.id %>" id="out-of-rotation-danger-outlined-<%= @player.id %>" autocomplete="off" data-players--card-target="statButton" data-category="point_given">
                      <label class="btn btn-outline-danger btn-sm" for="out-of-rotation-danger-outlined-<%= @player.id %>">Rotation</label>
                      <input type="radio" class="btn-check" name="back-row-attack-outlined-<%= @player.id %>" id="back-row-attack-danger-outlined-<%= @player.id %>" autocomplete="off" data-players--card-target="statButton" data-category="point_given">
                      <label class="btn btn-outline-danger btn-sm" for="back-row-attack-danger-outlined-<%= @player.id %>">Back Row Attack</label>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>