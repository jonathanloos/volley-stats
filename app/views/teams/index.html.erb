<div class="d-flex justify-content-between mt-4">
  <h1>Teams</h1>
  <div>
    <%= link_to "New Team", new_team_path, class: "btn btn-primary" %>
  </div>
</div>

<div id="users">
  <table class="table table-sm table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Club</th>
        <th>Players</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td><%= team.name %></td>
          <td><%= team.club %></td>
          <td><%= link_to team.users.count, users_path({team_id: team.id}) %></td>
          <td><%= link_to "edit", edit_team_path(team) %></td>
          <td><%= link_to "delete", team, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>