<div class="d-flex justify-content-between mt-4">
  <h1>Users</h1>
  <div>
    <% if @users.count != User.all.count %>
      <%= link_to "All Users", users_path, class: "btn btn-light" %>
    <% end %>
    <%= link_to "New user", new_user_path, class: "btn btn-primary", title: "Hey", data: {"bs-toggle": "tooltip"} %>
  </div>
</div>

<div id="users">
  <table class="table table-sm table-hover">
    <thead>
      <tr>
        <th>First</th>
        <th>Last</th>
        <th>Team</th>
        <th>Role</th>
        <th>Position</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th><%= user.first_name %></th>
          <th><%= user.last_name %></th>
          <th><%= link_to user.team %></th>
          <th><%= user.role.humanize %></th>
          <th><%= user.position&.humanize %></th>
          <th><%= link_to "edit", edit_user_path(user) %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>