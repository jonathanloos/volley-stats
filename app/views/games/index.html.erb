<div class="d-flex justify-content-between mt-4">
  <h1>Games</h1>
  <div>
    <% if @games.count != Game.all.count %>
      <%= link_to "All Games", games_path, class: "btn btn-light" %>
    <% end %>
    <%= link_to "New Game", new_game_path, class: "btn btn-primary", data: {"bs-toggle": "tooltip"} %>
  </div>
</div>

<div id="games">
  <table class="table table-sm table-hover mt-4">
    <thead>
      <tr>
        <th>Game</th>
        <th>Home Team</th>
        <th>Away Team</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= link_to game.title, game_path(game) %></td>
          <td><%= game.home_team %></td>
          <td><%= game.away_team %></td>
          <td class="text-nowrap"><%= game.date.strftime("%b %d, %Y") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>