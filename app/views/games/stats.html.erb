<% content_for(:page_title) do %>
  <%= @game %> - Stats
<% end %>

<div class="my-3">
  <%= link_to "back to set", @game %>
</div>

<div class="d-flex justify-content-between mt-4">
  <div>
    <h1 class="mb-0"><%= @game %> <%= @game.home_team %> vs <%= @game.away_team %> Stats</h1>
    <small class="text-muted"><%= @game.date.strftime("%Y-%m-%d") %>
  </div>
</div>
<div class="row">
  <div class="col-3">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= Games::StatsService.game_hitting_percentage(@game).round(3) %></h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">Overall hitting efficiency</h6>
        <div class="row mt-3">
          <div class="col-4 d-flex flex-column align-items-center">
            <h6><%= @game.events.skill_point_attack.count %></h6>
            <p class="text-muted m-0">kills</p>
          </div>
          <div class="col-4 d-flex flex-column align-items-center">
            <h6><%= @game.events.skill_error_attack.count %></h6>
            <p class="text-muted m-0">errors</p>
          </div>
          <div class="col-4 d-flex flex-column align-items-center">
            <h6><%= @game.events.total_attack_attempts.count %></h6>
            <p class="text-muted m-0">kills</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>