<div data-controller="game-events">
  <div class="row mt-4">
    <div class="col-md-8">
      <h1 class="mb-0"><%= @volleyball_set.game %> <span class="text-muted">Set <%= @volleyball_set.order %></span></h1>
      <small class="text-muted"><%= @volleyball_set.game.date.strftime("%Y-%m-%d") %></small>
    </div>
    <div class="col-md-4">
      <div class="d-flex flex-row mt-3 m-md-0">
        <div class="text-center w-100">
          <small class="text-muted text-nowrap"><%= @volleyball_set.game.team %></small>
          <h4 class="my-2" data-game-events-target="pointsFor">0</h4>
          <small class="text-muted text-nowrap">TOL: 1</small>
        </div>
        <div class="text-center w-100">
          <small class="text-muted text-nowrap">Away</small>
          <h4 class="my-2" data-game-events-target="pointsAgainst">0</h4>
          <small class="text-muted text-nowrap">TOL: 1</small>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-3 p-0">
      <h4>Lineup</h4>
      <ul class="btn-group-vertical w-100 ps-0">
        <% @volleyball_set.players.each do |player| %>
          <button class="btn btn-outline-secondary d-flex flex-row justify-content-between py-2" data-game-events-target="player" data-action="click->game-events#selectPlayer" data-name="<%= player %>">
            <span><%= player.user.jersey_number %>: <%= player %></span>
            <span><%= player.position.humanize %></span>
          </button>
        <% end %>
      </ul>
      <div class="d-flex flex-row">
        <button data-game-events-target="undoButton" data-action="game-events#undoAction" class="btn btn-primary d-none flex-grow-1 mb-3">undo</button>
        <button data-game-events-target="clearButton" data-action="game-events#clear" class="btn btn-light d-none flex-grow-1 mb-3">clear</button>
      </div>
      <div class="d-flex flex-row">
        <div class="d-flex flex-column flex-grow-1">
          <div class="border-bottom border-end p-1 text-center d-flex flex-column">
            <h4 id="rotation4"  class="m-0"><%= @volleyball_set.players.find_by(rotation: 4).user.jersey_number %></h4>
            <small class="text-muted"><%= @volleyball_set.players.find_by(rotation: 4).rotation %></small>
          </div>
          <div class="border-top border-end p-1 text-center d-flex flex-column flex-grow-1">
            <h4 id="rotation5" class="m-0"><%= @volleyball_set.players.find_by(rotation: 5).user.jersey_number %></h4>
            <small class="text-muted"><%= @volleyball_set.players.find_by(rotation: 5).rotation %></small>
          </div>
        </div>
        <div class="d-flex flex-column flex-grow-1">
          <div class="border-bottom border-end border-start p-1 text-center d-flex flex-column">
            <h4 id="rotation3" class="m-0"><%= @volleyball_set.players.find_by(rotation: 3).user.jersey_number %></h4>
            <small class="text-muted"><%= @volleyball_set.players.find_by(rotation: 3).rotation %></small>
          </div>
          <div class="border-top border-end border-start p-1 text-center d-flex flex-column">
            <h4 id="rotation6" class="m-0"><%= @volleyball_set.players.find_by(rotation: 6).user.jersey_number %></h4>
            <small class="text-muted"><%= @volleyball_set.players.find_by(rotation: 6).rotation %></small>
          </div>
        </div>
        <div class="d-flex flex-column flex-grow-1">
          <div class="border-bottom border-start p-1 text-center d-flex flex-column">
            <h4 id="rotation2" class="m-0"><%= @volleyball_set.players.find_by(rotation: 2).user.jersey_number %></h4>
            <small class="text-muted"><%= @volleyball_set.players.find_by(rotation: 2).rotation %></small>
          </div>
          <div class="border-top border-start p-1 text-center d-flex flex-column">
            <h4 id="rotation1" class="m-0"><%= @volleyball_set.players.find_by(rotation: 1).user.jersey_number %></h4>
            <small class="text-muted"><%= @volleyball_set.players.find_by(rotation: 1).rotation %></small>
          </div>
        </div>
      </div>
      <p>Rotation: <span data-game-events-target="rotation"><%= @volleyball_set.starting_rotation %></span></p>
    </div>
    <div class="col-md-9">
      <div class="d-flex flex-row justify-content-between">
        <h4>Action</h4>
        <div class="d-flex flex-row">
          <h4 class="me-1" data-game-events-target="playerSelection"></h4>
          <h4 class="me-1" data-game-events-target="actionSelection"></h4>
          <h4 class="me-1" data-game-events-target="qualitySelection"></h4>
          <button data-game-events-target="submitButton" data-action="game-events#submitEvent" class="btn btn-success btn-sm d-none">save</button>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-2">
              <h6>In Rally</h6>
              <div class="row">
                <% Event.rally_skills.keys.each do |rally_skill| %>
                  <div class="col-12 p-1">
                    <button class="btn btn-outline-secondary w-100 h-100" data-game-events-target="actionButton" data-action="game-events#selectActionEvent" data-action-type="rally" data-quality-metric="<%= Event::QUALITY_CATEGORIES[rally_skill] %>" data-action-name="<%= rally_skill.humanize.downcase %>"><%= rally_skill.humanize %></button>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="col-md-2">
              <h6>Point Earned</h6>
              <div class="row">
                <% Event.skill_points.keys.each do |skill_point| %>
                  <div class="col-md-12 p-1">
                    <button class="btn btn-outline-success w-100 h-100" data-game-events-target="actionButton" data-action="game-events#selectActionEvent" data-action-type="point" data-quality-metric="<%= Event::QUALITY_CATEGORIES[skill_point] %>" data-action-name="<%= skill_point.humanize.downcase %>"><%= skill_point.humanize %></button>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="col-md-8">
              <h6>Point Given</h6>
              <div class="row">
                <% Event.skill_errors.keys.each do |skill_error| %>
                  <div class="col-4 p-1">
                    <button class="btn btn-outline-danger w-100 h-100" data-game-events-target="actionButton" data-action="game-events#selectActionEvent" data-action-type="error" data-action-name="<%= skill_error.humanize.downcase %>"><%= skill_error.humanize %></button>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <h4 class="mt-4">Quality</h4>
      <div class="card">
        <div class="card-body">
          <div data-game-events-target="qualityMeasure" class="d-none" data-quality-metric="passing">
            <h6>Passing (low - high)</h6>
            <div class="row">
              <% 4.times do |i| %>
                <div class="col-md-3 p-1">
                  <button class="btn btn-outline-secondary w-100 h-100" data-game-events-target="qualityButton" data-action="game-events#selectQualityMetric"><%= i + 1 %></button>
                </div>
              <% end %>
            </div>
          </div>
          <div data-game-events-target="qualityMeasure" class="d-none" data-quality-metric="attacking">
            <h6 class="mt-2">Attack Location</h6>
            <div class="row">
              <% 6.times do |i| %>
                <div class="col-sm-2 p-1">
                  <button class="btn btn-outline-secondary w-100 h-100" data-game-events-target="qualityButton" data-action="game-events#selectQualityMetric"><%= i + 1 %></button>
                </div>
              <% end %>
            </div>
          </div>
          <div data-game-events-target="qualityMeasure" class="d-none" data-quality-metric="serving">
            <h6 class="mt-2">Pass off serve (high-low)</h6>
            <div class="row">
              <% 4.times do |i| %>
                <div class="col-sm-3 p-1">
                  <button class="btn btn-outline-secondary w-100 h-100" data-game-events-target="qualityButton" data-action="game-events#selectQualityMetric"><%= i + 1 %></button>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
