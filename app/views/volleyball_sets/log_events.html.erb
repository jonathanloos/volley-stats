<div class="mt-4">
  <h1 class="mb-0"><%= @volleyball_set.game %> <span class="text-muted">Set <%= @volleyball_set.order %></span></h1>
  <small class="text-muted"><%= @volleyball_set.game.date.strftime("%Y-%m-%d") %>
</div>

<div class="row mt-4">
  <div class="col-md-3">
    <div class="d-flex flex-row">
      <div class="text-center w-100">
        <small class="text-muted"><%= @volleyball_set.game.team %></small>
        <h4 class="my-2">0</h4>
        <small class="text-muted">TOL: 1</small>
      </div>
      <div class="text-center w-100">
        <small class="text-muted">Away</small>
        <h4 class="my-2">0</h4>
        <small class="text-muted">TOL: 1</small>
      </div>
    </div>
    <ul class="list-group">
      <% @volleyball_set.players.each do |player| %>
        <li class="list-group-item list-group-item-action d-flex flex-row justify-content-between">
          <span><%= player.user.jersey_number %>: <%= player %></span>
          <span class="text-muted"><%= player.position.humanize %></span>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-9">
    <h4>Action</h4>
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-md-2">
            <h6>In Rally</h6>
            <div class="row">
              <% Event.rally_skills.keys.each do |rally_skill| %>
                <div class="col-12 p-1">
                  <button class="btn btn-secondary w-100 h-100"><%= rally_skill.humanize %></button>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-md-2">
            <h6>Point Earned</h6>
            <div class="row">
              <% Event.skill_points.keys.each do |skill_point| %>
                <div class="col-md-12 p-1">
                  <button class="btn btn-success w-100 h-100"><%= skill_point.humanize %></button>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-md-8">
            <h6>Point Given</h6>
            <div class="row">
              <% Event.skill_errors.keys.each do |skill_error| %>
                <div class="col-4 p-1">
                  <button class="btn btn-danger w-100 h-100"><%= skill_error.humanize %></button>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <h4 class="mt-4">Quality</h4>
    <div class="card">
      <div class="card-body">
        <h6>Passing</h6>
        <div class="row">
          <% 4.times do |i| %>
            <div class="col-md-3 p-1">
              <button class="btn btn-secondary w-100 h-100"><%= i + 1 %></button>
            </div>
          <% end %>
        </div>
        <h6>Hit Location</h6>
        <div class="row">
          <% 6.times do |i| %>
            <div class="col-sm-2 p-1">
              <button class="btn btn-secondary w-100 h-100"><%= i + 1 %></button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
